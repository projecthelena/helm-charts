{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string"
        }
      },
      "required": [
        "repository"
      ],
      "additionalProperties": false
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "annotations": {
          "$ref": "#/definitions/labelMap"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "commonLabels": {
      "$ref": "#/definitions/labelMap"
    },
    "podLabels": {
      "$ref": "#/definitions/labelMap"
    },
    "podAnnotations": {
      "$ref": "#/definitions/labelMap"
    },
    "deploymentAnnotations": {
      "$ref": "#/definitions/labelMap"
    },
    "podSecurityContext": {
      "type": "object"
    },
    "securityContext": {
      "type": "object"
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "httpPort": {
          "type": "integer"
        },
        "grpcPort": {
          "type": "integer"
        },
        "annotations": {
          "$ref": "#/definitions/labelMap"
        }
      },
      "required": [
        "type",
        "httpPort",
        "grpcPort"
      ],
      "additionalProperties": false
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string"
        },
        "annotations": {
          "$ref": "#/definitions/labelMap"
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string"
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "pathType": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "path",
                    "pathType"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "host",
              "paths"
            ],
            "additionalProperties": false
          }
        },
        "tls": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      },
      "additionalProperties": false
    },
    "resources": {
      "type": "object"
    },
    "nodeSelector": {
      "$ref": "#/definitions/labelMap"
    },
    "tolerations": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "affinity": {
      "type": "object"
    },
    "env": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "extraEnv": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/envVar"
      }
    },
    "extraEnvFrom": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "livenessProbe": {
      "$ref": "#/definitions/probe"
    },
    "readinessProbe": {
      "$ref": "#/definitions/probe"
    },
    "agents": {
      "description": "Optional override for config.agents",
      "type": "array",
      "items": {
        "$ref": "#/definitions/agent"
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "listenAddr": {
          "type": "string"
        },
        "pollInterval": {
          "type": "string"
        },
        "agents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/agent"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "definitions": {
    "labelMap": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "envVar": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "valueFrom": {
          "type": "object"
        }
      },
      "required": [
        "name"
      ],
      "anyOf": [
        {
          "required": [
            "value"
          ]
        },
        {
          "required": [
            "valueFrom"
          ]
        }
      ],
      "additionalProperties": true
    },
    "probe": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "httpGet": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "port": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "required": [
            "path",
            "port"
          ],
          "additionalProperties": true
        },
        "initialDelaySeconds": {
          "type": "integer",
          "minimum": 0
        },
        "periodSeconds": {
          "type": "integer",
          "minimum": 1
        },
        "timeoutSeconds": {
          "type": "integer",
          "minimum": 1
        },
        "failureThreshold": {
          "type": "integer",
          "minimum": 1
        },
        "successThreshold": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "enabled"
      ],
      "additionalProperties": true
    },
    "agent": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "baseUrl": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "baseUrl",
        "type",
        "token"
      ],
      "additionalProperties": false
    }
  }
}