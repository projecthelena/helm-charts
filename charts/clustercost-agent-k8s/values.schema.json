{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "replicaCount": {"type": "integer", "minimum": 1},
    "image": {
      "type": "object",
      "properties": {
        "repository": {"type": "string"},
        "tag": {"type": "string"},
        "pullPolicy": {"type": "string"}
      },
      "required": ["repository"],
      "additionalProperties": false
    },
    "imagePullSecrets": {"type": "array", "items": {"type": "object"}},
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {"type": "boolean"},
        "annotations": {"$ref": "#/definitions/labelMap"},
        "name": {"type": "string"}
      },
      "additionalProperties": false
    },
    "commonLabels": {"$ref": "#/definitions/labelMap"},
    "service": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "port": {"type": "integer"},
        "annotations": {"$ref": "#/definitions/labelMap"}
      },
      "required": ["type", "port"],
      "additionalProperties": false
    },
    "resources": {"type": "object"},
    "nodeSelector": {"$ref": "#/definitions/labelMap"},
    "affinity": {"type": "object"},
    "tolerations": {"type": "array", "items": {"type": "object"}},
    "priorityClassName": {"type": "string"},
    "podLabels": {"$ref": "#/definitions/labelMap"},
    "podAnnotations": {"$ref": "#/definitions/labelMap"},
    "podSecurityContext": {"type": "object"},
    "securityContext": {"type": "object"},
    "extraEnv": {"type": "array", "items": {"$ref": "#/definitions/envVar"}},
    "extraEnvFrom": {"type": "array", "items": {"type": "object"}},
    "extraArgs": {"type": "array", "items": {"type": "string"}},
    "livenessProbe": {"$ref": "#/definitions/probe"},
    "readinessProbe": {"$ref": "#/definitions/probe"},
    "pricing": {
      "oneOf": [
        {"type": "null"},
        {
          "type": "object",
          "properties": {
            "provider": {"type": "string"},
            "region": {"type": "string"},
            "cpuHourPrice": {"type": "number"},
            "memoryGibHourPrice": {"type": "number"},
            "awsNodePrices": {"type": "object"}
          },
          "additionalProperties": false
        }
      ]
    },
    "scrapeIntervalSeconds": {"type": "integer", "minimum": 1},
    "logLevel": {"type": "string"},
    "clusterName": {"type": "string"},
    "config": {
      "type": "object",
      "properties": {
        "existingConfigMap": {"type": "string"}
      },
      "additionalProperties": false
    },
    "metricsServiceMonitor": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "namespace": {"type": "string"},
        "interval": {"type": "string"},
        "additionalLabels": {"$ref": "#/definitions/labelMap"}
      },
      "additionalProperties": false
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": {"type": "boolean"}
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "labelMap": {
      "type": "object",
      "additionalProperties": {"type": "string"}
    },
    "envVar": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "value": {"type": "string"},
        "valueFrom": {"type": "object"}
      },
      "required": ["name"],
      "anyOf": [
        {"required": ["value"]},
        {"required": ["valueFrom"]}
      ],
      "additionalProperties": true
    },
    "probe": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "httpGet": {
          "type": "object",
          "properties": {
            "path": {"type": "string"},
            "port": {
              "oneOf": [{"type": "string"}, {"type": "integer"}]
            }
          },
          "required": ["path", "port"],
          "additionalProperties": true
        },
        "initialDelaySeconds": {"type": "integer", "minimum": 0},
        "periodSeconds": {"type": "integer", "minimum": 1},
        "timeoutSeconds": {"type": "integer", "minimum": 1},
        "failureThreshold": {"type": "integer", "minimum": 1},
        "successThreshold": {"type": "integer", "minimum": 1}
      },
      "required": ["enabled"],
      "additionalProperties": true
    }
  }
}
